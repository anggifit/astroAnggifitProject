---
import BaseLayout from "../layouts/BaseLayout.astro";

const { pageTitle, pageSubtitle} = Astro.props;
---

<BaseLayout pageTitle={pageTitle}>
  <div class="min-h-[2800px] relative mb-40">
    <div
      class="bg-gradient-to-r from-atlantis-300 to-atlantis-100 h-[364px] relative"
    >
      <div class="flex flex-col items-center">
        <h1 class="text-center pt-28 pb-10">{pageTitle}</h1>
        <p class="w-[780px] text-center pb-5">
          {pageSubtitle}
        </p>
        <slot />
      </div>
    </div>
  </div></BaseLayout
>
