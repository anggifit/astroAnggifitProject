---
import PageHeaderLayout from "../layouts/PageHeaderLayout.astro";
const { frontmatter } = Astro.props;
const pageTitle = "Nutrirecetas";
const pageSubtitle = "";
---

<PageHeaderLayout pageTitle={pageTitle} pageSubtitle={pageSubtitle}>
  <body class="bg-gray-100 mt-24">
    <div class="container mx-auto p-4 sm:p-6">
      <div class="bg-white p-4 sm:p-6 rounded-lg shadow-lg">
        <h1 class="text-xl sm:text-2xl font-bold mb-4">
          {frontmatter.title}
        </h1>
        <div class="flex flex-col sm:flex-row">
          <img
            class="w-full sm:w-1/2 md:w-1/3 h-auto max-h-64 sm:max-h-96 object-cover mx-auto mb-4 sm:mb-0 sm:mr-4 rounded-lg shadow-md"
            src={frontmatter.image.url}
            alt={frontmatter.image.alt}
          />
          <div class="sm:flex-1">
            <h2 class="text-lg sm:text-xl font-semibold mb-2">Ingredientes</h2>
            <ul class="list-disc list-inside mb-4">
              {frontmatter.ingredients.map((ingredient) => (
                <li class="mb-2">{ingredient}</li>
              ))}
            </ul>
          </div>
        </div>

        <h2 class="text-lg sm:text-xl font-semibold mb-2 mt-4">¿Cómo Prepararlo?</h2>
        <ol class="list-decimal list-inside mb-6">
          {frontmatter.steps.map((step) => <li class="mb-2">{step}</li>)}
        </ol>
      </div>
    </div>

    <div class="flex flex-wrap mt-4">
      {frontmatter.tags.map((tag) => (
        <p class="m-1 py-1 px-2 sm:py-2 sm:px-4 bg-atlantis-100 rounded">
          <a class="text-atlantis-700" href={`/tags/${tag}`}>
            {tag}
          </a>
        </p>
      ))}
    </div>
  </body>
</PageHeaderLayout>