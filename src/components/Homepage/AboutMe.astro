---
import SectionLayout from "../../layouts/SectionLayout.astro";
import CustomImage from "../CustomImage.astro";
import CustomButton from "../CustomButton.astro";
import poleUrbano from "../../assets/anggi-pole-urbano.jpeg";
import data from "../../data.json"

const { sectionTitle } = Astro.props;
const customButton = "Mas acerca de mi";
const aboutMeText = data.aboutMe.shortDescription;
---

<SectionLayout sectionTitle={sectionTitle}>
  <div class="flex flex-row justify-center mx-10">
    <div class="w-[1537px] relative">
      <div class="grid grid-cols-4 grid-rows-5 gap-4 p-2">
        <div class="col-span-2 row-span-3 place-self-center relative">
          <div
            class="w-[151.02px] h-[141.1px] absolute -left-10 -bottom-10 bg-atlantis-100 z-0"
          >
          </div>
          <!-- Cuadro verde detrÃ¡s -->
          <CustomImage
            src={poleUrbano}
            alt="Anggi haciendo pole urbano"
            width="33.813rem"
          />
        </div>
        <div class="col-span-2 row-span-3 col-start-3 self-center">
          <p class="px-6 mr-2 leading-loose">
            {aboutMeText}
          </p>
          <div class="flex justify-end py-4 my-2">
            <a href="/about">
              <CustomButton customButton={customButton} />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</SectionLayout>
