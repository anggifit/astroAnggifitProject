---
import CustomImage from "../../CustomImage.astro";

const { testimoniePic, alt, text, name } = Astro.props;
---

<div class="grid grid-cols-3 grid-rows-5 gap-10 items-center justify-items-start p-4">
  <div class="row-span-4 flex justify-center items-center">
    <CustomImage src={testimoniePic} alt={alt} width="253.62px" />
  </div>
    <div
    class="col-span-2 row-span-2 col-start-2 row-start-2 flex flex-col items-start space-y-4"
  >
    <div class="flex justify-start items-center w-full">
      <div class="flex items-center gap-1.5 pr-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          aria-hidden="true"
          class="h-6 w-6 text-atlantis-400"
        >
          <path
            fill-rule="evenodd"
            d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
            clip-rule="evenodd"
          />
        </svg>
        <span class="text-xl font-semibold">5</span>
      </div>

      <p class="font-semibold text-[#0F172A]">
        {name}
      </p>
    </div>

    <p class="w-[616px] h-[137px] italic text-left text-[#0F172A]">
      {text}
    </p>
  </div>
</div>
